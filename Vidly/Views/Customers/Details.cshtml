@model Vidly.Models.Customer
@{ 
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><p>Membership Type: @Model.MembershipType.name</p></li>
    @if (Model.Birthday.HasValue)
    {
        <li><p>Birthday: @Model.Birthday.Value.ToShortDateString()</p></li>

    }
    
</ul>

